---
import { Image } from 'astro:assets';
import Card from './Card.astro';
import type { CollectionEntry } from 'astro:content';
interface Props {
	data: CollectionEntry<'projects'>[];
}

const { data } = Astro.props;
---

<section id='projects'>
	<h1 class='mb-8 text-2xl font-semibold tracking-tighter'>Projects</h1>
	<ol class='group/list'>
		{
			data.map(({ body, data: { tech, image, title, link } }) => (
				<a href={link} target='_blank' rel='noopener noreferrer'>
					<Card title={title} body={body} tech={tech}>
						<header class='z-10 min-w-[150px] mb-2 mt-1 text-xs font-semibold uppercase tracking-wide text-slate-500 inline-block'>
							<Image
								src={image}
								alt={title}
								width={140}
								height={200}
								class='rounded'
							/>
						</header>
					</Card>
				</a>
			))
		}
	</ol>
</section>
