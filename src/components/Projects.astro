---
import { Image } from 'astro:assets';
import Card from './Card.astro';
import type { CollectionEntry } from 'astro:content';
interface Props {
	data: CollectionEntry<'projects'>[];
}

const { data } = Astro.props;
---

<section id='projects'>
	<h1 class='mb-8 text-2xl font-semibold tracking-tighter'>Projects</h1>
	<ol class='group/list'>
		{
			data.map(({ body, data: { tech, image, title, link } }) => (
				<a href={link} target='_blank' rel='noopener noreferrer'>
					<Card
						title={title}
						body={body}
						tech={tech}
						className='flex-col-reverse'>
						<header class='z-10 min-w-[150px] mb-2 mt-1 text-xs font-semibold uppercase tracking-wide text-slate-500 inline-block'>
							<Image
								src={image}
								alt={title}
								class='rounded lg:w-[140px] w-full lg:h-[100px] h-[150px] mx-auto mt-3'
							/>
						</header>
					</Card>
				</a>
			))
		}
	</ol>
</section>
