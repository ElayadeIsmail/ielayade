---
import ThemeIcon from './ThemeIcon.astro';

const navItems = {
	'#about': {
		name: 'Home',
		options: {},
	},
	'#experience': {
		name: 'Experience',
		options: {},
	},
	'#projects': {
		name: 'Projects',
		options: {},
	},
	'/ELAYADE_ISMAIL.pdf': {
		name: 'Resume',
		options: {
			target: '_blank',
			download: true,
			rel: 'noopener noreferrer',
		},
	},
};
---

<aside class='-ml-[8px] mb-16 tracking-tight'>
	<div class='lg:sticky lg:top-20'>
		<nav
			class='flex justify-between items-start relative px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative'
			id='nav'>
			<div class='flex flex-row space-x-0 pr-10'>
				{
					Object.entries(navItems).map(
						([path, { name, options }]) => {
							return (
								<a
									href={path}
									{...options}
									class='transition-all hover:text-neutral-800 dark:hover:text-neutral-200 flex align-middle relative py-1 px-2 m-1'>
									{name}
								</a>
							);
						}
					)
				}
			</div>
			<div>
				<ThemeIcon />
			</div>
		</nav>
	</div>
</aside>
