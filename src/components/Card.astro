---
import ArrowIcon from './icons/arrow-icon.astro';

interface Props {
	title: string;
	body: string;
	tech: string[];
	className?: string;
}

const { body, tech, title, className = '' } = Astro.props;
---

<li
	class={`flex lg:space-x-4 lg:flex-row flex-col group mb-4 lg:mb-12 p-3 rounded-md transition motion-reduce:transition-none cursor-pointer ${className}`}>
	<slot />
	<div class='flex flex-col'>
		<h3
			class='text-card-foreground text-base lg:text-xl flex leading-tight items-center group-hover:text-teal-600 dark:group-hover:text-teal-300 font-bold'>
			{title}
			<span
				class='group-hover:text-teal-600 dark:group-hover:text-teal-300 ml-2 group-hover:-translate-y-0.5 transition'>
				<ArrowIcon />
			</span>
		</h3>
		<p
			class='mt-2 lg:text-sm text-xs leading-normal text-accent-foreground'>
			{body}
		</p>
		<ul class='mt-2 flex flex-wrap'>
			{
				tech.map((_tech) => {
					return (
						<li class='mr-1.5 mt-2'>
							<div class='flex items-center rounded-full dark:bg-teal-400/10 bg-teal-300/10 px-3 py-1 text-xs font-medium leading-5 text-teal-600 dark:text-teal-300'>
								{_tech}
							</div>
						</li>
					);
				})
			}
		</ul>
	</div>
</li>

<style>
	li:hover {
		background-color: #f4f4f4;
	}
	:global(.dark) li:hover {
		background-color: rgb(30 41 59 / 0.5);
	}
</style>
